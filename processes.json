{
  "apps" : [
    {
        "name"        : "harvester",
        "script"      : "index.js",
        "instances"   : 1,
        "exec_mode"   : "cluster_mode",
        "args"        : ["--next-gen-js"],
        "watch"       : false,
        "merge_logs"  : true,
        "cwd"         : "./",
        "env": {
            "NODE_ENV": "production"
        },
        "pid_file"         : "var/pids/node-harvester-api.pid",
        "error_file"       : "var/log/node-harvester-api.stderr.log",
        "out_file"         : "var/log/node-harvester-api.stdout.log"
    }
  ]
}
